<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">

    <title>Search Hotel</title>
</head>
<body>
    <%- include('partials/navbar') %>
      <!-- customize form -->
      <div class="container">
        <h2 class="my-4 ">Hotel Search</h2>
        <form action="">
          <!-- location , check-in and check-out Dates -->
          <div class="row mb-3">
            <!-- location -->
            <div class="col-6">
              <label for="location" class="form-label">Location</label>
            <input type="text" class="form-control" id="location" placeholder="Enter location">
            </div>
                <!-- check-in and check-out dates -->
            <div class="col-6">
              <div class="row">
              <div class="col-md-6 mb-3">
                <label for="checkInDate" class="form-label">Check-in Date</label>
                <input type="date" class="form-control" id="checkInDate">
              </div>
              <div class="col-md-6 mb-3">
                <label for="checkOutDate" class="form-label">Check-out Date</label>
                <input type="date" class="form-control" id="checkOutDate">
              </div>
            </div>
            </div>
          </div>
           <!--  Room reference number of guests -->
         <div class="row">
           <!-- Room Preferences -->
           <div class="col-3">
            <label for="roomPreferences" class="form-label">Room Preferences</label>
            <select class="form-select" id="roomPreferences">
              <option value="single">Single</option>
              <option value="double">Double</option>
              <option value="queen">Queen</option>
              <option value="king">King</option>
            </select>
          </div>

          <div class="col-4">
              <!-- Number of Guests and Rooms -->
          <div class="row">
            <div class="col-md-6 mb-3">
              <label for="numAdults" class="form-label">Number of Adults</label>
              <input type="number" class="form-control" id="numAdults" min="1" value="1">
            </div>
            <div class="col-md-6 mb-3">
              <label for="numChildren" class="form-label">Number of Children</label>
              <input type="number" class="form-control" id="numChildren" min="0" value="0">
            </div>
            
          </div>
          </div>
           <div class="col-2 ">

            <button type="submit" class="btn btn-primary mt-4 ">Search Hotels</button>
           </div>
         </div>
        </form>
      </div>
</body>
</html>