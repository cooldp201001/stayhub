<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
   
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
         *{
            margin: 0;
            padding: 0;
        }
         .hotelImagesLarge{
            width: 100%;
            height: 30rem;
            object-fit: cover;
        }
    </style>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">

    <title>Add Room</title>
</head>
<body>
    <%- include('../partials/adminNavbar') %>
<div class="container-fluid">
    <h1><%= hotelDetails.HotelName %></h1>
    <p><%= hotelDetails.Description %></p>
     
      <div id="carouselExampleIndicators" class="carousel slide" >
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="3" aria-label="Slide 4"></button>
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="4" aria-label="Slide 5"></button>
        </div>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="<%= hotelDetails.imagesUrl.image1 %>" class="hotelImagesLarge" alt="...">
            </div>
            <div class="carousel-item ">
                <img src="<%= hotelDetails.imagesUrl.image2 %>" class="hotelImagesLarge"alt="...">
            </div>
            <div class="carousel-item ">
                <img src="<%= hotelDetails.imagesUrl.image3 %>" class="hotelImagesLarge" alt="...">
            </div>
            <div class="carousel-item  ">
              <img src="<%= hotelDetails.imagesUrl.image4 %>" class="hotelImagesLarge" alt="...">
          </div>
          <div class="carousel-item ">
            <img src="<%= hotelDetails.imagesUrl.image5 %>" class="hotelImagesLarge" alt="...">
        </div>
        </div>
        <button class="carousel-control-prev " type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
            <span class="carousel-control-prev-icon"  aria-hidden="true"></span>
           
        </button>
        <button class="carousel-control-next " type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
            <span class="carousel-control-next-icon"  aria-hidden="true"></span>
        </button>
    </div>

   
  <!-- Hotel rooms -->
    <div class="hotel-room-details-container">
    <h2 class="mt-4">Rooms</h2>
    <div class="row">
        <% hotelDetails.Rooms.forEach(room => { %>
            <div class="col-md-4 mb-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title"><%= room.Description %></h5>
                        <p class="card-text"><b>Base Rate:</b> $<%= room.BaseRate %></p>
                    </div>  
                </div>
            </div>
        <% }) %>
        
        
    </div>
</div>

     <!-- Hotel address -->
     <div class="address-container mt-3">
        <h2>Address: <span class="text-secondary"><%= hotelDetails.Address.StreetAddress %> <%= hotelDetails.Address.City %> <%= hotelDetails.Address.StateProvince %>  <%= hotelDetails.Address.Country %></span> </h2>
     
      </div>
      <hr class="mb-2">
  <!-- Form to add room -->
  <h2 class="mt-5">Add Room</h2>
  <form class="row mx-auto mb-5" id="addRoomForm" method="POST" action="/admin/hotels/add-room/<%= hotelDetails.HotelName %>">
    <div class="form-group col-md-3">
      <label for="description">Room Description</label>
      <input type="text" class="form-control" id="description" name="description" required placeholder="Enter room type"list="roomTypeList">
      <datalist id="roomTypeList">
        <option value=" Queen Room"></option>
        <option value="King Room"></option>
        <option value="Twin Room"></option>
        <option value="Double Room"></option> 
        <option value="Studio Room"></option>
      </datalist>
    </div>
    <div class="form-group col-md-3">
      <label for="baseRate">Base Rate</label>
      <input type="number" class="form-control" id="baseRate" name="baseRate" required placeholder="Enter base rate">
    </div>
    <div class="form-group col-md-3">
      <label for="sleepsCount">Sleeps Count</label>
      <input type="number" class="form-control" id="sleepsCount" name="sleepsCount" required min="1" max="6" placeholder="Enter sleeps count">
    </div>
    <div class="form-group col-md-3 d-flex align-items-end">
      <button type="submit" class="btn btn-primary w-100">Add Room</button>
    </div>
  </form>
  
  
  

</div> 
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"  crossorigin="anonymous"></script>

</body>
</html>