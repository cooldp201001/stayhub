<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>Home</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>
<body>
    <%- include('partials/navbar') %>

    <div class="container">
        <div class="row row-cols-1 row-cols-md-3 g-4">

  <% hotelsInfo.forEach(hotel => { %>
    <div class="col">
        <div class="card">
            <a href="/hotel-details/<%= hotel._id %>"> <!-- Link to the booking page with hotel ID -->
                <img src="https://images.pexels.com/photos/164595/pexels-photo-164595.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5><%= hotel.HotelName %></h5>
                    <p class="m-1"><b>City:</b> <%= hotel.Address.City %></p>
                    <p class="m-1"><b>Rating:</b> <%= hotel.Rating %></p>
                </div>
            </a>
        </div>
    </div>
<% }) %>

    </div>
    </div>
  
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
</body>
</html>


