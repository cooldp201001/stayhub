<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hotel Details</title>
    <!-- Add Bootstrap CSS link -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
     
<div class="container mt-5">
    <h1><%= hotel.HotelName %></h1>
    <p><%= hotel.Description %></p>

    <h2>Address</h2>
    <p><b>Street:</b> <%= hotel.Address.StreetAddress %></p>
    <p><b>City:</b> <%= hotel.Address.City %></p>
    <p><b>State:</b> <%= hotel.Address.StateProvince %></p>
    <p><b>Postal Code:</b> <%= hotel.Address.PostalCode %></p>
    <p><b>Country:</b> <%= hotel.Address.Country %></p>

    <h2>Rooms</h2>
    <div class="row">
        <% hotel.Rooms.slice(0, 5).forEach(room => { %>
            <div class="col-md-4 mb-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title"><%= room.Description %></h5>
                        <p class="card-text"><b>Type:</b> <%= room.Type %></p>
                        <p class="card-text"><b>Base Rate:</b> $<%= room.BaseRate.toFixed(2) %></p>
                        <!-- Add more details as needed -->
                    </div>
                </div>
            </div>
        <% }) %>
    </div>
    <div><a type="button" href="/booking/<%= hotel._id%>" class="btn btn-primary btn-lg"> Reserve Now</a></div>
</div>

<!-- Add Bootstrap JS and Popper.js scripts -->
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.0.7/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

</body>
</html>
