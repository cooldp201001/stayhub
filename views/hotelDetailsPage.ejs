<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hotel Details</title>
    <style>
        *{
            margin: 0;
            padding: 0;
        }
        .hotelImagesLarge{
            width: 100%;
            height: 30rem;
            object-fit: cover;
        }
        .roomCardBoxDiv{
            box-shadow: rgba(0, 0, 0, 0.20) 2.4px 6.4px 8.2px;
            background-color: #f2eeee;
        }
    </style>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>
<body>
  <%- include('partials/navbar') %>
<div class="container-fluid">
    <h1><%= hotelDetails.HotelName %></h1>
    <p><%= hotelDetails.Description %></p>
       <div>
      <div id="carouselExampleIndicators" class="carousel slide" >
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="3" aria-label="Slide 4"></button>
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="4" aria-label="Slide 5"></button>
        </div>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="<%= hotelDetails.imagesUrl.image1 %>" class="hotelImagesLarge" alt="...">
            </div>
            <div class="carousel-item ">
                <img src="<%= hotelDetails.imagesUrl.image2 %>" class="hotelImagesLarge"alt="...">
            </div>
            <div class="carousel-item ">
                <img src="<%= hotelDetails.imagesUrl.image3 %>" class="hotelImagesLarge" alt="...">
            </div>
            <div class="carousel-item  ">
              <img src="<%= hotelDetails.imagesUrl.image4 %>" class="hotelImagesLarge" alt="...">
          </div>
          <div class="carousel-item ">
            <img src="<%= hotelDetails.imagesUrl.image5 %>" class="hotelImagesLarge" alt="...">
        </div>
        </div>
        <button class="carousel-control-prev " type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
            <span class="carousel-control-prev-icon"  aria-hidden="true"></span>
           
        </button>
        <button class="carousel-control-next " type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
            <span class="carousel-control-next-icon"  aria-hidden="true"></span>
        </button>
    </div>
</div>
   
  <!-- Hotel rooms -->
    <h2 class="mt-3">Rooms</h2>
    <div class="row">
        <% hotelDetails.Rooms.forEach(room => { %>
            <div  class="col-md-4 mb-4">
                <div class="card roomCardBoxDiv">
                    <div class="card-body">
                        <h5 class="card-title"><%= room.Description %></h5>
                        <!-- <p class="card-text"><b>Type:</b> <%= room.Type %></p> -->
                        <p class="card-text"><b>Base Rate:</b> $<%= room.BaseRate %></p>
                    </div>  
                </div>
            </div>
        <% }) %>
        
        <!-- Hotel address -->
        <div class="address-container">
            <p class="me-1 fs-5"><b>Address: </b><%= hotelDetails.Address.StreetAddress, hotelDetails.Address.City, hotelDetails.Address.Country %></p>
          </div>
    </div>
    <div><a type="button" href="/booking/<%=hotelDetails.HotelName%>" class="btn btn-primary btn-lg mb-4">Reserve Now</a></div>
</div>

<!-- Add Bootstrap JS and Popper.js scripts -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"  crossorigin="anonymous"></script>

</body>
</html>
